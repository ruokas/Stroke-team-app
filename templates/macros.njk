{% macro actionButton(id, title, icon, label, classes='') %}
<button id="{{ id }}"{% if title %} title="{{ title }}"{% endif %} class="btn{% if classes %} {{ classes }}{% endif %}">{{ icon }} <span class="btn-label">{{ label }}</span></button>
{% endmacro %}

