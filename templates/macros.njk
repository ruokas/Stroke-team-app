{% macro timeInput(id, wrapperId='', wrapperClass='row', showNow=true) %}
<div class="{{ wrapperClass }}"{% if wrapperId %} id="{{ wrapperId }}"{% endif %}>
  <div class="input-group">
    <input
      id="{{ id }}"
      class="time-input"
      type="datetime-local"
      placeholder="YYYY-MM-DD HH:MM"
      step="60"
    />
      {% if showNow %}
      <button
        type="button"
        class="btn ghost"
        data-now="{{ id }}"
        aria-label="Dabar"
      >
        Dabar
      </button>
      {% endif %}
    <button
      type="button"
      class="btn ghost"
      data-stepdown="{{ id }}"
      aria-label="−5 min"
    >
      −5
    </button>
    <button
      type="button"
      class="btn ghost"
      data-stepup="{{ id }}"
      aria-label="+5 min"
    >
      +5
    </button>
  </div>
</div>
{% endmacro %}
